<Window x:Class="GoodTimeStudio.MyPhone.TrayApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoodTimeStudio.MyPhone.TrayApp"
        xmlns:tb="http://www.hardcodet.net/taskbar"
        xmlns:xamlhost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        mc:Ignorable="d"
        
        Title="MainWindow" Height="500" Width="500"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Opacity="0.5"
        ShowInTaskbar="False"
        Visibility="Visible"
        Deactivated="_Window_Deactivated"
        x:Name="_Window">
    <Grid>
        <tb:TaskbarIcon x:Name="_NotifyIcon"
                        Visibility="Visible"
                        IconSource="/Resources/icon.ico"
                        ToolTipText="My Phone Assistant" 
                        TrayRightMouseUp="_NotifyIcon_TrayRightMouseUp" />

        <xamlhost:WindowsXamlHost x:Name="_Host"
                                  InitialTypeName="Windows.UI.Xaml.Controls.Grid"
                                  ChildChanged="_Host_ChildChanged" />
    </Grid>
</Window>
